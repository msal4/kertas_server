name: Go

on:
  push:
    branches: [ master ]
  pull_request:
    branches: [ master ]

jobs:

  test:
    name: Test
    runs-on: ubuntu-latest
    services:
      minio:
        image: minio/minio
        env:
          MINIO_ROOT_USER: minio
          MINIO_ROOT_PASSWORD: minio
        ports: 
          - 9000:9000
      postgres:
        image: postgres:13
        env:
          POSTGRES_PASSWORD: postgres
          POSTGRES_DB: school
        ports: 
          - 5432:5432
        options: >-
          --health-cmd pg_isready
          --health-interval 10s
          --health-timeout 5s
          --health-retries 5
    steps:
    - uses: actions/checkout@v2

    - name: Set up Go
      uses: actions/setup-go@v2
      with:
        go-version: 1.16
    
    - name: Build
      run: go build -v ./...

    - name: Test
      run: go test -v ./...
    env:
      DATABASE_URL: postgres://postgres:postgres@127.0.0.1:5432/school
      MINIO_ENDPOINT: localhost:9000
      MINIO_ACCESS_KEY: minio
      MINIO_TOKEN: minio
